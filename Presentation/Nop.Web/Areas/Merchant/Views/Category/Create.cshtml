@model CategoryModel
@{
    //page title
    ViewBag.Title = T("Merchant.Catalog.Categories.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Categories");
}

<form asp-controller="Category" asp-action="Create" method="post" id="category-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Merchant.Catalog.Categories.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Merchant.Catalog.Categories.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Merchant.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Merchant.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync("MerchantWidget", new { widgetZone = MerchantWidgetZones.CategoryDetailsButtons })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>