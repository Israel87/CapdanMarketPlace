@model OrderAddressModel

<div asp-validation-summary="All"></div>

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            @await Component.InvokeAsync("MerchantWidget", new { widgetZone = MerchantWidgetZones.OrderAddressDetailsTop, additionalData = Model })
            <div class="panel panel-default">
                <div class="panel-body">
                    <nop-editor asp-for="Address" asp-template="Address" />
                </div>
            </div>
            @await Component.InvokeAsync("MerchantWidget", new { widgetZone = MerchantWidgetZones.OrderAddressDetailsBottom, additionalData = Model })
        </div>
    </div>
</div>
