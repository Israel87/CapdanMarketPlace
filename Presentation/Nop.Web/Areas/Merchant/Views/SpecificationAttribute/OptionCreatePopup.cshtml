@model SpecificationAttributeOptionModel

@{
    Layout = "_MerchantPopupLayout";

    //page title
    ViewBag.Title = T("Merchant.Catalog.Attributes.SpecificationAttributes.Options.AddNew").Text;
}

<form asp-controller="SpecificationAttribute" asp-action="OptionCreatePopup"
      asp-route-specificationAttributeId="@Context.Request.Query["specificationAttributeId"]" 
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Merchant.Catalog.Attributes.SpecificationAttributes.Options.AddNew")
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Merchant.Common.Save")
            </button>
            @await Component.InvokeAsync("MerchantWidget", new { widgetZone = MerchantWidgetZones.SpecificationAttributeOptionDetailsButtons })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateOption", Model)
</form>
