@model ReturnRequestActionModel

@{
    //page title
    ViewBag.Title = T("Merchant.Configuration.Settings.Order.ReturnRequestActions.EditDetails").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Order settings");
}


<form asp-controller="Setting" asp-action="ReturnRequestActionCreate" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Merchant.Configuration.Settings.Order.ReturnRequestActions.EditDetails") - @Model.Name
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="ReturnRequestActionList">@T("Merchant.Configuration.Settings.Order.ReturnRequestActions.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Merchant.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Merchant.Common.SaveContinue")
            </button>
            <span id="returnrequestaction-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Merchant.Common.Delete")
            </span>
            @await Component.InvokeAsync("MerchantWidget", new { widgetZone = MerchantWidgetZones.ReturnRequestActionDetailsButtons, additionalData = Model })
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            @await Html.PartialAsync("_CreateOrUpdate.ReturnRequestAction", Model)
        </div>
    </div>
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="returnrequestaction-delete" asp-action="ReturnRequestActionDelete"/>