@model ProductAvailabilityRangeModel

@{
    //page title
    ViewBag.Title = T("Merchant.Configuration.Shipping.ProductAvailabilityRanges.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Dates and ranges");
}

<form asp-controller="Shipping" asp-action="CreateProductAvailabilityRange" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Merchant.Configuration.Shipping.ProductAvailabilityRanges.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="DatesAndRanges">@T("Merchant.Configuration.Shipping.ProductAvailabilityRanges.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Merchant.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Merchant.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync("MerchantWidget", new { widgetZone = MerchantWidgetZones.ProductAvailabilityRangeDetailsButtons })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateProductAvailabilityRange", Model)
</form>