@model ProductAvailabilityRangeModel

@{
    //page title
    ViewBag.Title = T("Merchant.Configuration.Shipping.ProductAvailabilityRanges.EditProductAvailabilityRangeDetails").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Dates and ranges");
}


<form asp-controller="Shipping" asp-action="EditProductAvailabilityRange" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Merchant.Configuration.Shipping.ProductAvailabilityRanges.EditProductAvailabilityRangeDetails") - @Model.Name 
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="DatesAndRanges">@T("Merchant.Configuration.Shipping.ProductAvailabilityRanges.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Merchant.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Merchant.Common.SaveContinue")
            </button>
            <span id="product-availability-range-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Merchant.Common.Delete")
            </span>
            @await Component.InvokeAsync("MerchantWidget", new { widgetZone = MerchantWidgetZones.ProductAvailabilityRangeDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateProductAvailabilityRange", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="product-availability-range-delete" asp-action="DeleteProductAvailabilityRange" />
