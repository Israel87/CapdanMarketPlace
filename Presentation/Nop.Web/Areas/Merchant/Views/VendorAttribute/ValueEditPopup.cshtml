@model VendorAttributeValueModel

@{
    Layout = "_MerchantPopupLayout";

    //page title
    ViewBag.Title = T("Merchant.Vendors.VendorAttributes.Values.EditValueDetails").Text;
}

<form asp-controller="VendorAttribute" asp-action="ValueEditPopup"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Merchant.Vendors.VendorAttributes.Values.EditValueDetails")
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Merchant.Common.Save")
            </button>
            @await Component.InvokeAsync("MerchantWidget", new { widgetZone = "Merchant_vendor_attribute_value_details_buttons", additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateValue", Model)
</form>