@model CustomerModel

<div class="panel-group">
    @await Component.InvokeAsync("MerchantWidget", new { widgetZone = MerchantWidgetZones.CustomerDetailsImpersonateTop, additionalData = Model })
    <div class="panel panel-default">
        <div class="panel-body">
            <ul class="common-list">
                <li>@T("Merchant.Customers.Customers.Impersonate.Description1")</li>
                <li>@T("Merchant.Customers.Customers.Impersonate.Description2")</li>
            </ul>
            <button type="submit" name="impersonate" class="btn btn-primary">
                <i class="fa fa-shopping-cart"></i>
                @T("Merchant.Customers.Customers.Impersonate.Button")
            </button>
        </div>
    </div>
    @await Component.InvokeAsync("MerchantWidget", new { widgetZone = MerchantWidgetZones.CustomerDetailsImpersonateBottom, additionalData = Model })
</div>
